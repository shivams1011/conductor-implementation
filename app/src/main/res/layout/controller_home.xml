<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/txtHomeController"
        android:text="Hello First Conductor Page"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/txtPagerController"
        android:text="Pager Conductor Page"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/txtChildController"
        android:text="Child Conductor Page"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
